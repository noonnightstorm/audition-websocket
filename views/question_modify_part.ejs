<div class="question-form">
	<div class="question-type-box">
		<p class="question-mark"><------ new question ------></p>
		<label>type:</label>
		<select class="question-type">
			<% if(question.type == "0"){ %>
			<option value="0" selected="true">单选题</option>
			<% } %>
			<% if(question.type !="0"){ %>
			<option value="0">单选题</option>
			<% } %>
			<% if(question.type == "1"){ %>
			<option value="1" selected="true">多选题</option>
			<% } %>
			<% if(question.type !="1"){ %>
			<option value="1">多选题</option>
			<% } %>
			<% if(question.type == "2"){ %>
			<option value="2" selected="true">问答题</option>
			<% } %>
			<% if(question.type !="2"){ %>
			<option value="2">问答题</option>
			<% } %>
		</select>
	</div>
	<div class="question-content-box">
		<label class="question-content-label">content:</label>
		<textarea class="question-content"><%= question.content %></textarea>
	</div>
	<div class="answer-box">
		<section>
			<% if(question.type != "2"){ %>
			<button class="add-answer-btn">
				add answer
			</button>
			<% } %>
		</section>
		<% answers.forEach(function(answer){ %>
			<% if(question._id == answer.question_id) {%>
				<div class="answer-item">
					<label>answer:</label>
					<input type="text" class="answer-content" value=<%= answer.content %>>
				</div>
			<% } %>
		<%	}) %>
		<div class="answer-item answer-item-example">
			<label>answer:</label>
			<input type="text" class="answer-content">
		</div>
	</div>
	<button class="del-question-btn" value="<%= question._id %>">delete</button>
</div>